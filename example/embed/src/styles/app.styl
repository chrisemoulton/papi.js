@import 'normalize'
@import 'helper'
@import 'carousel'

/* variables */
$lightgrey = #999
$linkColor = #000
$grey = #eee
$black = #000
$white = #f7f7f7

html
button
input
select
textarea
  color: #000
h1
  padding: 0 10px;

body
  color: $black
  font-size: 1em
  font-family: 'Open Sans', sans-serif;
  line-height: 1.5

a:visited
  text-decotration: none;

.pressly-embed-container
  width: 100%;
  margin: 0 auto;
  color: #fff !important;

  .pressly-embed
    margin: 0;
    padding: 0;
    list-style: none;
    position: relative;
    overflow: hidden;

    li
      width: 100%;
      display: inline-block;
      vertical-align: top;

      a
        color: #000;
        text-decoration: none;

      .asset-contents
        .content
          padding: 0;

          .byline
            font-size: 12px;
            color: #0694ff;
            padding: 10px 0 5px 0;

          .title
            font-size: 14px
            line-height: 18px;
            padding: 0;
            margin: 0;

      .link
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        z-index: 10;

    &:hover
      .owl-prev, .owl-next
        opacity: 1;
        transform: translateX(0);

