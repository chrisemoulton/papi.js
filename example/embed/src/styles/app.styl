@import 'normalize'
@import 'helper'

/* variables */
$lightgrey = #999
$linkColor = #555
$grey = #eee
$black = #111
$white = #f7f7f7

html
button
input
select
textarea
  color: #000
h1
  padding: 0 10px;

a
a:visited
  color: $linkColor
  text-decoration: none

a:hover
  color: lighten($linkColor,10%)

body
  color: $black
  font-size: 1em
  line-height: 1.5

.pressly-embed
  margin: 0;
  padding: 0;
  list-style: none;
  position: relative;
  overflow: hidden;

  li
    width: 100%;
    display: inline-block;
    vertical-align: top;

    .asset-contents
      .content
        padding: 0;

        .byline
          font-size: 14px;
          padding: 4px 0 0px 0;

        .title
          font-size: 16px
          line-height: 20px;
          padding: 0;
          margin: 0;

    .link
      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
      z-index: 10;

  &:hover
    .owl-prev, .owl-next
      opacity: 1;
      transform: translateX(0);

.owl-controls
  .owl-nav
    div
      color: #fff;
      opacity: 0.2;
      padding: 10px 12px;
      background: #000;
      transition: transform 0.3s ease, opacity 0.3s ease;

  .owl-prev, .owl-next
    position: absolute;
    top: 50%;
    margin-top: -60px;

    &:hover
      background: #0694ff;

  .owl-prev
    left: 0;
    transform: translateX(-100%);

  .owl-next
    right: 0;
    transform: translateX(100%);
