@import 'normalize'
@import 'helper'

/* variables */
$lightgrey = #999
$linkColor = #555
$grey = #eee
$black = #222
$white = #f7f7f7

html
button
input
select
textarea
  color: $black

a
a:visited
  color: $linkColor
  text-decoration: none

a:hover
  color: lighten($linkColor,10%)

body
  color: $black
  font-size: 1em
  line-height: 1.5

header
  background: $grey
  color:$black

  nav
    float: left
    user-select: none

  .logo
    float: right
    padding: 15px 30px

  .nav-item
    float:left
    padding: 15px 30px
    margin: 0

    &.active
      background: #aaa
      color: #fff

.content
  padding: 2em 4em

ul.results
  list-style: none;
  padding: 20px 0;
  margin: 0;

  > li
    padding: 5px 10px;
    border-bottom: 1px solid #ddd;
    line-height: 30px;

    img.avatar
      width: 30px;
      height: 30px;

    a
      color: #aaa;
      &:hover
        color: #000;

.searchForm
  input
    height: 25px;
    margin: 0 10px;
  button
    padding: 4px 20px;
